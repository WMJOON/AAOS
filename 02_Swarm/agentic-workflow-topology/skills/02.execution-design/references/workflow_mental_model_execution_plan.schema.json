{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "workflow_mental_model_execution_plan",
  "type": "object",
  "required": [
    "bundle_ref",
    "node_chart_map",
    "task_to_chart_map",
    "node_mode_policy",
    "model_selection_policy",
    "handoff_contract",
    "fallback_rules"
  ],
  "properties": {
    "bundle_ref": {
      "type": "object",
      "required": ["id", "version", "generated_at"],
      "properties": {
        "id": { "type": "string" },
        "version": { "type": "string" },
        "generated_at": { "type": "string" }
      }
    },
    "node_chart_map": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["node_id", "chart_ids", "checkpoint_id"],
        "properties": {
          "node_id": { "type": "string" },
          "chart_ids": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" }
          },
          "checkpoint_id": { "type": "string" }
        }
      }
    },
    "task_to_chart_map": { "type": "array", "items": { "type": "object" } },
    "node_mode_policy": { "type": "object" },
    "model_selection_policy": { "type": "object" },
    "handoff_contract": { "type": "object" },
    "fallback_rules": { "type": "array", "items": { "type": "string" } }
  }
}
